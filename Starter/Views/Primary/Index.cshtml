@model Starter.DAO.StarterDbContext
<h1>Course Catalog</h1>

    <table class="table">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Last Name</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (ProfessorModel prof in @Model.professors)
        {
            <tr>
                <th scope="row">@prof.id</th>
                <td>@prof.lastName</td>
                <td>
                    <a asp-area="" asp-controller="Primary" asp-action="ViewCourses" asp-route-professorID ="@prof.id">
                        <button class="btn btn-success">
                            View Courses
                        </button>
                    </a>
                </td>
            </tr>
        }            
        </tbody>
    </table>